---
apiVersion: v1
kind: Pod
metadata:
  namespace: jenkins
  name: master
spec:
  containers:
    - name: master
      image: shcode/jmeter
      args:
        [ "-n -t /mnt/jmeter/script/JMXSCRIPT -l /mnt/jmeter/results/result-DATETIME.jtl -j /mnt/jmeter/logs/master-log-DATETIME.log  -e -o /mnt/jmeter/HtmlReport-DATETIME -R SERVERS" ]
      env:
        - name: JVM_ARGS
          value: "-Xms512m -Xmx1024m"
        - name: mode
          value: "master"
      resources:
        limits:
          memory: 1024Mi
          cpu: 1000m
        requests:
          cpu: 1000m
          memory: 1024Mi
      volumeMounts:
        - name: jmeter-result
          mountPath: /mnt/jmeter
        - name: jmeter-script
          mountPath: /mnt/jmeter/script
          readOnly: true
  volumes:
    - name: jmeter-result
      hostPath:
        path: PERSISTANCE
        type: DirectoryOrCreate
    - name: jmeter-script
      configMap:
        name: jmeter-script

---
apiVersion: v1
kind: Service
metadata:
  namespace: jenkins
  name: master
spec:
  selector:
    app: master
  ports:
    - name: master
      port: 1099
  type: ClusterIP

---

